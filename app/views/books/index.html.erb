<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-sm-12 col-md-12">
      <div class="thumbnail">
        <img src="<%= book.images %>">
        <div class="caption">
          <h3><%= book.book_title %></h3>
          <h3><%= book.author %></h3>
          <%= link_to "More Info", book, class: "btn btn-default" %>  
          <td><%= link_to 'Show', book, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>        
        </div>        
      </div>      
    </div>    
  <% end %>
  
</div>

